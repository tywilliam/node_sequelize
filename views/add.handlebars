    <section id="add" class="container">
        <div class="form-wrap">
            <h1>Add a Gig</h1>
            <p>Your contact email will be shard with registered users to apply to your gig</p>
            {{#each errors }}
                <div class="error">
                    <p>{{text}}</p>
                </div>
            {{/each}}
            <form action="/gigs/add" method="POST">
                <div class="input-group">
                    <label for="title">Gig Title</label>
                    <input type="text" value={{title}} name="" id="title" class="input-box" placeholder="eg. Small Wordpress website, React developer" maxlength="100" required>
                </div>
                <div class="input-group">
                    <label for="technologies">Technologies Needed</label>
                    <input type="text" value={{technologies}} name="technologies" id="technologies" class="input-box" placeholder="eg. javascript, react, PHP" maxlength="100">
                </div>
                <div class="input-group">
                    <label for="budget">Budget (Leave blank for unknown) </label>
                    <input type="number" name="budget" id="budget" class="input-box" value={{budget}} placeholder="20,50,100,300">
                </div>
                <div class="input-group">
                    <label for="description">Gig Description</label>
                    <textarea name="description" id="description" class="input-box" placeholder="Describe the details of the gig" cols="30" rows="10">
                        {{description}}
                    </textarea>
                </div>
                <div class="input-group">
                    <label for="budget">Contact Email</label>
                    <input type="email" name="contact_email" id="contactemail" class="input-box" placeholder="Enter an email" value={{contact_email}}> 
                </div>
                <input type="submit" value="Add Gig" class="btn btn-reverse">
            </form>
        </div>
    </section>